#include <iostream>;
#include <cmath>;
using namespace std;

void two()//второе задание
{
	cout << "Задание №2: Поменять значения А, В и С (А-->В,В-->C,C-->A) " << endl << endl;//Ставим задачу
	int A, B, C, v, k, d;//Задаём переменные
	cout << "Введите через пробел значения А, В и С:";//Просим пользователя ввести значения
	cin >> A >> B >> C;//Пользователь их вводит
	v = A;//Меняем значение А на v 
	k = B;//Меняем значение В на к
	d = C;//Меняе значение С на d
	cout << "Ответ: " << d << " " << v << " " << k<< " " << endl<<endl<<endl<<endl;//Меняем последовательность подставляя вспомогательные переменные и выводим ответ
}

void three()//третье задание так же как во втором, но другая последовательность 
{ 
	cout << "Задание №3: Поменять значения А, В и С (А-->С,С-->В,В-->A) " << endl<<endl;
	int A, B, C, v, k, d;
	cout << "Введите через пробел значения А, В и С:";
	cin >> A >> B >> C;
	v = A;
	k = B;
	d = C;
	cout << "Ответ: " << k << " " << d << " " << v << " " << endl<<endl<<endl<<endl;
}

void four()//четвёртое задание
{
	cout << "Задание №4: Найти значение функции при данном Х" << endl<<endl;
	int x,s;//Задаём переменные
	cout << "Введите Х:";
	cin >> x;
	s = 3 * x * x * x * x * x * x - 6 * x * x - 7;//Компутер считает математическую задачку
	cout << "Ответ:" << s << endl << endl << endl<<endl;//Компутер выводит ответ
}

void five()//пятое задание так же как и в четвёртом, но другие значения
{
	cout << "Задание №5: Найти значение функции при данном Х" << endl << endl;
	int x, s;
	cout << "Введите Х:";
	cin >> x;
	s = 4*pow((x-3),6)-7*pow((x-3),3)+2;//pow означает воздведение в степень и работает так pow(a,b): где а-это значение, а B-это степень в которую мы возводим значение
	cout << "Ответ:" << s << endl << endl << endl << endl;
}

void six()//шестое задание
{
	cout << "Задание 6: Вычислить А^8" << endl << endl;
	int A, b;
	cin >> A;
	b = A * A * A * A * A;
	cout << "Ответ: " << b * A * A * A << endl << endl << endl << endl;
}

void seven()//седьмое задание
{
	cout << "Задание 7: Вычислить А^15" << endl << endl;
	int A, b,c;
	cin >> A;
	b = A * A * A * A * A;
	c = b * A;
	cout << "Ответ: " << b * c*A*A*A*A  << endl << endl << endl << endl;
}


int main()//первое задание и главное по совместительству
{
	setlocale(LC_ALL, "Russian");//переводим всё на русский язык
	cout << "Задание №1: Поменять значения А и В местами" << endl << endl;;
	int a, b, v,c;
	cout << "Введите через пробел значения А и В : ";
	cin >> a >> b;
	v = a;
	c = b;
	cout << "Ответ:" << c<<" " << v << endl<<endl<<endl<<endl;
	two();//подключаем вторую задачку
	three();//подключаем третью задачку
	four();//подключаем четвёртую задачку
	five();//пятую
	six();//шестую
	seven();//седьмую
	return 0;//конец программы
