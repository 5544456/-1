#include <iostream>
using namespace std;

void radian()//считает длину окружности
{
	cout << "Задание 2: Введите Диаметр" << endl;
	double p = 3.14;//объявление переменной p
	double d;//объявление переменной d
	cin >> d;//Пользователь введёт переменную d
	cout << "Длина окружности = "<<p * d << endl<< endl<<endl;//программа выводит ответ
	cout << "Следующее задание-->" << endl;
}

void srednee()//считает среднеарифметическое 
{
	cout << "Задание 3: Введите a и b" << endl;
	double a, b;//объявляет тип перемунных a и b
	cin >> a >> b;//Пользователь вводит переменные
	cout << "Среднее арифметическое = " << (a + b) / 2 << endl<<endl<<endl;
	cout << "Следующее задание-->" << endl;
}


void srp()//считает сумму,разность,произведение и частное квадратов
{
	cout << "Задание 4: Введите два ненулевых числа" << endl;
	double g, k;
	cin >> g >> k;
	cout << "Сумма = " << (g*g) + (k*k) << endl;
	cout << "Разность = " << (g*g)- (k*k) << endl;
	cout << "Произведение = " << (g*g) * (k*k) << endl;
	cout << "Частное квадратов =" << (g*g) / (k*k)<<endl<<endl<<endl;
	cout << "Следующее задание-->" << endl;
}

void srp2()//считает сумму,разность,произведение и частное модулей
{
	cout << "Задание 5: Введите два ненулевых числа" << endl;
	double g, k;
	cin >> g >> k;
	cout << "Сумма = " << abs(g) + abs(k) << endl;
	cout << "Разность = " << abs(g) - abs(k) << endl;
	cout << "Произведение = " << abs(g) * abs(k) << endl;
	cout << "Частное модулей = " << abs(g) / abs(k) << endl<<endl;
}

int main()
{
	setlocale(LC_ALL, "Russian");//Позволяет ввести русский язык 
	cout << "Задание 1: Введите стороны прямоугольника" << endl;
	int a, b;
	cin >> a >> b;
	cout << "Площадь прямоугольника = " << a * b << endl;
	cout << "Периметр прямоугольника = " << (a + b) * 2 << endl<<endl<<endl;
	cout << "Следующее задание-->" << endl;
	radian();//будет работать void radian
	srednee();//будет работать void srednee
	srp();//будет работать void srp
	srp2();//будет работать void srp2
	return 0;// возвращаент к нулю
}
