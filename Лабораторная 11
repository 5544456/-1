#include <iostream>;
using namespace std;

void pass()
{
	int empty;
	cout << "Введите любой символ: ";
	cin >> empty;
	system("cls");
}

void six()
{
	cout << "Задание 6:Дано целое число, лежащее в диапазоне 1–999. Вывести его строкуописание вида «четное двузначное число», «нечетное трехзначное число» и т. д " << endl << endl;
	int a;
	cout << "Введите число(1-999):";
	cin >> a;
	double k = a /100;
	double s = a / 10;
	if ((k < 10)and(a%2==0)and(k>1))
	{
		cout << "Число 3-х значное, четное" << endl << endl;
	}
	if ((k < 10) and (a % 2 != 0)and(k>1))
	{
		cout << "Число 3-х значное, нечетное" << endl << endl;
	}
	if ((s < 10) and (a % 2 == 0)and(s>1))
	{
		cout << "Число 2-х значное, чётное" << endl << endl;
	}
	if ((s < 10) and (a % 2 != 0)and(s>1))
	{
		cout << "Число 2-х значное, нечётное" << endl << endl;
	}
	pass();
}

void five()
{
	cout << "Задание 5:Дано целое число. Вывести его строку-описание вида «отрицательное четное число», «нулевое число», «положительное нечетное число» и т. д." << endl << endl;
	int a;
	cout << "Введите число:";
	cin >> a;
	if ((a < 0) and (a % 2 == 0))
	{
		cout << "Число отрицательное, четное" << endl << endl;
	}
	if ((a > 0) and (a % 2 == 0))
	{
		cout << "Число положительное, четное" << endl << endl;
	}
	if ((a < 0) and (a % 2 != 0))
	{
		cout << "Число отрицательное, нечетное" << endl << endl;
	}
	if ((a > 0) and (a % 2 != 0))
	{
		cout << "Число положительно, нечетное" << endl << endl;
	}
	if (a == 0)
	{
		cout << "Число нулевое" << endl << endl;
	}
	pass();
}

void four()
{
	cout << "Задание 4: Определить номер координатной четверти, в которой находится данная точка(не лежит на OX и OY)" << endl << endl;
	int x, y;
	cout << "Введите координаты точки(x,y):";
	cin >> x >> y;
	if ((x > 0) and (y > 0))
	{
		cout << "Точка находится в 1 четверти" << endl << endl;
	}
	if ((x < 0) and (y > 0))
	{
		cout << "Точка находится в 2 четверти" << endl << endl;
	}
	if ((x < 0) and (y < 0))
	{
		cout << "Точка находится в 3 четверти" << endl << endl;
	}
	if ((x > 0) and (y < 0))
	{
		cout << "Точка находится в 4 четверти" << endl << endl;
	}
}

void three()
{
	cout << "Задание 3: Определить, какая из двух последних точек (B или C) расположена ближе к A, и вывести эту точку и ее расстояние от точки A" << endl << endl;
	double A, B, C;
	cout << "Введите точки А,В,С:";
	cin >> A >> B >> C;
	if (abs(A - B) < abs(A - C))
	{
		cout << "Точка В лежит ближе её расстояние равно:" << abs(A - B) << endl << endl;
	}
	if (abs(A - B) > abs(A - C))
	{
		cout << "Точка C лежит ближе её расстояние равно:" << abs(A - C) << endl << endl;
	}
	if (abs(A - B) == abs(A - C))
	{
		cout << "Точки равноудаленны от А, их расстояние равно:" << abs(A - C) << endl << endl;
	}
	pass();
}

void two()
{
	cout << "Задание 2: Найти сумму двух наибольших чисел из трех" << endl << endl;
	double a, b, c;
	cout << "Введите 3 числа:";
	cin >> a >> b >> c;
	if ((a > b) and (c > b))
	{
		cout << "Сумма равна:" << a + c << endl << endl;
	}
	if ((b > a) and (c > a))
	{
		cout << "Сумма равна:" << b + c << endl << endl;
	}
	if ((a > c) and (c < b))
	{
		cout << "Сумма равна:" << a + b << endl << endl;
	}
	if ((a == b) and (a == c) and (b == c))
	{
		cout << "Все числа равны, их сумма:" << a * 3 << endl;
		cout << "Cумма двух:" << a * 2 << endl << endl;
	}
	pass();
}

int main()
{
	setlocale(LC_ALL, "Russian");
	cout << "Задание 1: Если значения переменных А и В неравны то присвоить меньшей большее значение, если значения равны то переменные обнулить, вывести получившиеся переменные" << endl << endl;
	int A, B;
	cout << "Введите переменные:";
	cin >> A >> B;
	if (A == B)
	{
		cout << "Переменные изначально равны поэтому новые значения: " << "0" << " " << "0" << endl << endl;
	}
	if (A > B)
	{
		B = A;
		cout << "Новые переменные равны: " << A << " " << B << endl << endl;
	}
	if (A < B)
	{
		A = B;
		cout << "Новые переменные равны: " << A << " " << B << endl << endl;
	}
	pass();
	two();
	three();
	four();
	five();
	six();
}
